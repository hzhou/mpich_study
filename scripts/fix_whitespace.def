page: fix_whitespace
    module: perl

    my $root="$ENV{HOME}/work/mpich-github"
    chdir $root or die
    
    my @filelist
    &call open_r, "git log --name-only HEAD~1..HEAD |"
        $if /^(src\/\S+)/
            push @filelist, $1

    $foreach $f in @filelist
        $print $f...
        system "sh maint/code-cleanup.sh $f"
