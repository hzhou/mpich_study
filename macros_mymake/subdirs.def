subcode: compile_mpl
    my @t
    push @t, "cd src/mpl"
    push @t, "rsync -r ../../confdb/ confdb/"
    push @t, "autoreconf -ivf"
    push @t, "./configure --disable-versioning --enable-embedded"
    push @t, "\x24(MAKE)"

    push @extra_make_rules, "$(Lmpl):"
    push @extra_make_rules, "\t(". join(' && ', @t). ")"
    push @extra_make_rules, ""

