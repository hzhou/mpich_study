subcode: make_hwloc
    my @t
    push @t, "cd $moddir/hwloc"
    push @t, "sh autogen.sh"
    push @t, "./configure --enable-embedded-mode --enable-visibility"
    push @t, "\x24(MAKE)"

    push @extra_make_rules, "$(Lhwloc):"
    push @extra_make_rules, "\t(". join(' && ', @t). ")"
    push @extra_make_rules, ""

