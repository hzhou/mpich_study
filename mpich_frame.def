subcode: _autoload
    $(block:frame_init)
        $call modeline
        $call copyright
        $call @document
        NEWLINE?

perlcode: doc
    my $title=$param
    require MyDef::ext
    my $codelist = MyDef::ext::grab_codelist(do_macro=>1)

    push @$out, "NEWLINE?"
    push @$out, "/** $title\n"
    $foreach @$codelist
        $if /^\s*$/
            push @$out, " *\n"
        $else
            s/^. /  /;
            my @t = MyDef::utils::longline_split($_)
            $foreach @t
                push @$out, " *    $_\n"
    push @$out, " */\n"

